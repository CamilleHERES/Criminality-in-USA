import matplotlib.pyplot as plt

# Data
ethnic_groups = ['Black', 'Hispanic', 'Asian', 'White', 'Overall']
poverty_rates = [19.5, 17, 8.1, 8.2, 11.4]

# Create a bar chart
plt.bar(ethnic_groups, poverty_rates, color=['black', 'orange', 'green', 'blue', 'red'])
plt.xlabel('Ethnic Group')
plt.ylabel('Poverty Rate (%)')
plt.title('Poverty Rate by Ethnic Group in the United States in 2020')
plt.ylim(0, 25)  # Adjust the y-axis range based on your data

# Display the percentage above each bar
for i in range(len(ethnic_groups)):
    plt.text(i, poverty_rates[i] + 0.5, f'{poverty_rates[i]:.1f}%', ha='center')

# Display the chart
plt.show()
